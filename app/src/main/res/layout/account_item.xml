<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="85dp"
    >

    <TextView
        android:id="@+id/item_maintextview"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/textview_1" />

    <TextView
        android:id="@+id/flage_textview"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="收入"
        android:gravity="center"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/monry_textview"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_below="@+id/flage_textview"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="52220元"
        android:textColor="#000000"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/remarks_textview"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/monry_textview"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:text="备注：哎呀，还没有备注呢"
        />

    <TextView
        android:id="@+id/moneytype_textview"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_below="@+id/remarks_textview"
        android:layout_toRightOf="@+id/monry_textview"
        android:paddingTop="9dp"
        android:text="标签：其他"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/time_textview"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="2020年9月9日"
        android:layout_below="@+id/remarks_textview"
        android:layout_toRightOf="@+id/moneytype_textview"
        android:paddingTop="5dp"
        />

</RelativeLayout>